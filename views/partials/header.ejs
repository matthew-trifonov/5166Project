<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MindfulMeet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/event-detail.css" rel="stylesheet">
    <link href="/css/new-event.css" rel="stylesheet">
  </head>
  <body>
    
    <header>
      <div class="container-fluid bg-dark bg-gradient py-3">
        <div class="row align-items-center">
          <div id="header-img-holder" class="col-md-5">
            <a href="/" class="m-4"><img id="header-img" src="/images/MindfulMeet-logos_transparent.png" alt="Logo"></a>
          </div>
          <div id="header-link-holder" class="col-md-7 text-end">
            <%if (!user) {%>
              <a href='/users/login'><button class="bg-dark p-2 me-3" id="log-in">Log in</button></a>
              <a href='/users/new'><button class="bg-dark p-2 me-3" id="sign-up">Sign Up</button></a>
            <%} else {%> 
            <a href="/events/new" class="text-white m-3 me-5">New Event</a>
            <a href='/users/profile'><button class="bg-dark p-2 me-3" id="profile"> <%= user.firstName %>'s Profile</button></a>
            <a href='/users/logout'><button class="bg-dark p-2 me-3" id="logout">Logout</button></a>
                <%}%>                   
          </div>
        </div>
      </div>
    </header>

    <nav class="navbar navbar-expand-sm navbar-dark bg-success">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/" class="text-white m-4 text-decoration-none fs-5">Home</a>
            </li>
            <li class="nav-item">
              <a href="/events" class="text-white m-4 text-decoration-none fs-5">Events</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <% if(errorMessages.length > 0) {%>
      <% errorMessages.forEach(message=>{%>
          <div class='error'>
              <%=message%>
          </div>
          <%});%>
              <%}%>
  
                  <% if(successMessages.length > 0) {%>
  
                      <% successMessages.forEach(message=>{%>
                          <div class='success'>
                              <%=message%>
                          </div>
                          <%});%>
                              <%}%>
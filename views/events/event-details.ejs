<%- include('../partials/header.ejs')%>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 mx-auto mt-5">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><strong><%= event.title %></strong></h5>
                        <img class="mb-5 mt-5" src="/images/seminar.png" alt="Seminar" style="width: 200px; height: 150px;">
                        <br>
                        <p class="card-text">
                            <strong>Host:</strong> <%= event.host %><br>
                            <br>
                            <strong>Start Time:</strong> <%= event.start %><br>
                            <br>
                            <strong>End Time:</strong> <%= event.end %><br>
                            <br>
                            <strong>Location:</strong> <%= event.location %><br>
                            <br>
                            <strong>Details:</strong> <%= event.details %>
                        </p>
                        <br>
                        <a href="/events/<%= event.id %>/edit" class="btn btn-outline-success me-2">Edit</a>
                        <a href="/events/<%= event.id %>/delete" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs')%>